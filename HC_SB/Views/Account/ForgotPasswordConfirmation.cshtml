@{
    ViewBag.Title = "Confirmación de contraseña olvidada";
    Layout = null;

}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/login")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="loginscreen">

    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <section id="loginForm">
                <h2>@ViewBag.Title</h2>
                <p>
                    Compruebe el correo electrónico para restablecer la contraseña.
                </p>
                <div class="row">                    
                    <div class="col-md-offset-4 col-md-4">
                        <a class="btn btn-default" href="@Url.Action("Login", "Account")">Ir al inicio</a>
                    </div>
                </div>
                </section>
        </div>

    </div>


    @Scripts.Render("~/bundles/jqueryval")

</body>
</html>
